Public Sub Form_Open()

  Main.Settings.Read(fSupportedApps)
  LoadApplications()

End

Private Sub LoadApplications()

  Dim mModule As Module

  Dim pPic As Picture

  ivAppList.Clear()

  For Each mModule In Modules.All

    pPic = Icons[mModule.Name]

    ivAppList.Add(mModule.Name, mModule.Name, pPic)

  Next
  Picture.Flush()

End

Public Sub Form_Close()

  Main.Settings.Write(fSupportedApps)

  ivAppList.Clear()

End

Public Sub Form_KeyPress()

  If Key.Code = Key.Escape Then Me.Close

End

Public Sub ivAppList_Activate()

  Dim mModule As Module

  mModule = Modules[ivAppList.Key]

  If Not mModule.Website Then Return

  Try Desktop.Open(mModule.Website)

End